# Database Configuration
# Opzione 1: URL completo del database
DATABASE_URL=postgresql://menuisland:password@localhost:5432/menuisland

# Opzione 2: Configurazione separata (alternativa al DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=menuisland
PGPASSWORD=your_password_here
PGDATABASE=menuisland

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
